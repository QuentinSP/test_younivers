{% extends '/admin/index.html.twig' %}

{% block title %}Les contenus{% endblock %}

{% block body %}
    <h1>Les contenus</h1>

    <table class="table" id="content-table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de création</th>
                <th class="no-sort">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.title }}</td>
                <td>{{ content.description }}</td>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_content_edit', {'id': content.id}) }}">Modifier</a>
{#                    <a href="{{ path('app_content_delete', {'id': content.id}) }}">Supprimer</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
                <td style="display: none"></td>
                <td style="display: none"></td>
                <td style="display: none"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_content_new') }}">Créer un contenu</a>
{% endblock %}
